@model BellaVista.Web.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
    var tiposCafe = ViewBag.TiposCafe as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
    var presentaciones = ViewBag.Presentaciones as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
}

<div class="bv-card">
    <div class="bv-card__header">Editar Producto</div>
    <div class="bv-card__body">
        <form class="bv-form" asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ProductoID" />

            <div class="mb-3">
                <label class="form-label">Nombre del Producto</label>
                <input class="form-control" asp-for="NombreProducto" />
                <span class="text-danger" asp-validation-for="NombreProducto"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Tipo de Café</label>
                <select class="form-select" asp-for="CategoriaID" asp-items="tiposCafe"></select>
                <span class="text-danger" asp-validation-for="CategoriaID"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Presentación</label>
                <select class="form-select" asp-for="Presentacion" asp-items="presentaciones"></select>
                <span class="text-danger" asp-validation-for="Presentacion"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">Precio Unitario (Q)</label>
                <input class="form-control" asp-for="PrecioUnitario" inputmode="decimal" />
                <span class="text-danger" asp-validation-for="PrecioUnitario"></span>
            </div>

            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-dark px-4">Guardar cambios</button>
                <a class="btn btn-sm btn-outline-dark me-2" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
